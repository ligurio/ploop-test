#!/bin/sh

rm -f $SPACE/ploop.image
ploop init -s 1g -f ploop1 $SPACE/ploop.image
insmod $MODPATH/ploop.ko; insmod $MODPATH/pfmt_ploop1.ko; insmod $MODPATH/pio_pcs.ko
mknod /dev/ploop0 b 182 0
echo Sleeping for 5 sec ...
sleep 5
ploop mount -f ploop1 -d /dev/ploop0 $SPACE/ploop.image
mkfs.ext4 -j -b 4096 /dev/ploop0
mount -t ext4 /dev/ploop0 /mnt_ploop

